{
    "StartAt": "BedrockInvokeModel",
    "States": {
        "BedrockInvokeModel": {
            "Type": "Task",
            "Resource": "arn:aws:states:::bedrock:invokeModel",
            "Parameters": {
                "ModelId": "arn:aws:bedrock:${aws_region}::foundation-model/amazon.titan-tg1-large",
                "Body": {
                    "inputText.$": "$.body.inputText",
                    "textGenerationConfig": {
                        "temperature": 0,
                        "topP": 1,
                        "maxTokenCount": 512
                    }
                }
            },
            "End": true
        }
    }
}
